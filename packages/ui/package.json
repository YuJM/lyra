{
  "name": "@lyra/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./styles": "./dist/esm/index.css"
  },
  "scripts": {
    "build": "pnpm run build:js && pnpm run build:types",
